<script type="text/javascript">

$(document).ready(function(){
  getSingleAutoCompleteList();
});

</script>

<h1>Create a new MADS GenreForm</h1>
<%= form_for @mads_genre_form do |f| %>
	<%= render 'error_messages' %>
  <div id="subjectField">
  <%= label_tag 'mads_genre_form[name]', "Name" %>
  <%= text_field_tag 'mads_genre_form[name]', '', required: true, class: "typeahead" %>
</div>
  <%= label_tag 'mads_genre_form[externalAuthority]', "ExternalAuthority" %>
  <%= url_field_tag 'mads_genre_form[externalAuthority]', '', class: "input-block-level" %> 
  <%= f.fields_for :genreFormElement do |te| %>
    <%= te.hidden_field :elementValue, class: "eleTypeahead" %>
  <% end %>
  <br>
  <%= render :partial => 'shared/edit_fields/scheme_fields' , :locals => {:f => f}%>
  <br>

  <%= render :partial => 'shared/edit_fields/new_form_hidden_fields' , :locals => {:parent_id => params[:parent_id], :parent_class => params[:parent_class]}%>

  <%=f.submit "Submit", class: "btn btn-primary" %>
<%end%>
