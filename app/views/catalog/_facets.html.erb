<% # main container for facets/limits menu -%>
<% if has_facet_values?  %>
  <div id="facets" class="facets sidenav">
    <h4 data-toggle="collapse" data-target=".facets-collapse">
      <a class="btn btn-navbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= t('blacklight.search.facets.title') %>
    </h4>
    <div class="facets-collapse">
      <%= render_facet_partials %>
    </div>
  </div>
    <div>
      <%= form_tag catalog_index_url, :method => :get, :class => 'form-search' do %>
        <div class="input-append">
          <% if params['f'] %>
            <input type="hidden" name="xf" value="<%= params['f'] %>"/>
          <% end %>
          <% if params['q'] %>
            <input type="hidden" name="xq" value="<%= params['q'] %>"/>
          <% end %>
          <label class="hide-text" for="q">Search Digital Collections</label>
          <input type="text" placeholder="Search within results" name="q" id="q" class="search-query" style="width: 70%;"/>
          <button class="btn btn-inverse" type="submit" id="mobile-search-button">
            <i class="icon-search icon-white"></i>
          </button>
        </div>
      <% end %>

  </div>
<% end %>
