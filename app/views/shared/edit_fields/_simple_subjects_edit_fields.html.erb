<div class="fields">
<br/>
<% if selected_type.nil?%>

	<%= select_tag "#{object_type}[subjectType][]",  options_for_select(typeArray) , :prompt=>"Select Subject Type" , :onChange=>"javascript: getTypeaheadFields(this,'#{object_type}','#newSimpleSubjects','0','simpleSubject');"%>
	<div id="newSimpleSubjects"></div>
<% else %>
    <%= text_field_tag "test1", "#{selected_type}" %>
	<%= hidden_field_tag "#{object_type}[subjectType][]", "#{selected_type}" %>
	<script type="text/javascript">
	   getTypeaheadFields("<%= selected_type %>","<%= object_type %>","#newSimpleSubjects<%= index %>","0","simpleSubject","<%= selected_value %>");
	</script>
	<div id="newSimpleSubjects<%= index %>"></div>
	</div>	
<% end %>
