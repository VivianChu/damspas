<h3>Language</h3>
<% language =object.language
	i = 0
	if language != nil
		while i < language.size  do
%>
			<div class="fields">
				<br/>
				
				<%= select_tag "#{object_type}[languageURI][]", options_for_select(@mads_languages, :selected => "#{Rails.configuration.id_namespace}#{language[i].pid}") , :prompt=>"Select Language", required: true, :class=>"languageClass#{i}", :id=>"languageId#{i}", :onChange=>"javascript: checkOption(this.className,false,'mads_languages');"%>
				<br/>
				<% if i > 0%>
    		
    			<% end %>					
			</div>					
<%			
			i +=1		
		end
    end
%> 

