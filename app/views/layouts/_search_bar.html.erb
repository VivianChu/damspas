
<section class="container-fluid mobile-search-bar-alt clearfix">
  <%= form_tag catalog_index_url, :method => :get, :class => 'form-search' do %>
    <div class="input-append">
      <% if params['f'] %>
        <input type="checkbox" checked="checked" name="xf" value="<%= params['f'] %>"/>
        <label for="xf">Use current limits</label>
      <% end %>
      <label class="hide-text" for="q">Search Digital Collections</label>
      <input type="text" placeholder="Search Digital Collections" name="q" id="q" class="search-query" value="<%= params['q'] %>">
      <button class="btn btn-inverse" type="submit" id="mobile-search-button">
        <i class="icon-search icon-white"></i>
      </button>
    </div>
  <% end %>
</section>
