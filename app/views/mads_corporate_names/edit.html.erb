<% @page_title =  "Edit Corporate Name" %>

<div class="row-fluid">
  <div class="span10 offset1">
    <h2>Edit Corporate Name</h2>

    <%= form_for @mads_corporate_name, :html => { :onsubmit => 'removeEmptyFields();'} do |f| %>

      <%= render 'error_messages', object: f.object %>

      <%= label_tag 'mads_corporate_name[name][]', "Name" %>
      <%= text_field_tag 'mads_corporate_name[name][]', @mads_corporate_name.name[0], class: "input-block-level" %>
      <%= label_tag 'mads_corporate_name[externalAuthority][]', "URI" %>
      <%= text_field_tag 'mads_corporate_name[externalAuthority][]', @mads_corporate_name.externalAuthority, class: "input-block-level" %>
      <%= f.fields_for :scheme, include_id: false do |se| %>
        <%= se.label :id, "Vocabulary" %>
        <%= se.select :id, options_for_select(@mads_schemes, :selected => @scheme_id) , :prompt=>"Select Vocabulary" %>
      <% end %>
        
      <%= label_tag 'mads_corporate_name[dateNameElement_attributes][0][elementValue]', "Dates" %>
      <%= text_field_tag 'mads_corporate_name[dateNameElement_attributes][0][elementValue]', @mads_corporate_name.dateNameValue, class: "input-block-level" %>          

      <%= label_tag 'mads_corporate_name[nameElement_attributes][0][elementValue]', "Other Name" %>
      <%= text_field_tag 'mads_corporate_name[nameElement_attributes][0][elementValue]', @mads_corporate_name.nameValue, class: "input-block-level" %>          

      <div class="form-actions">
        <button type="submit" class="btn btn-primary pull-right">Save changes</button>
        <%= link_to "Cancel", mads_corporate_name_path(@mads_corporate_name), class: "btn btn-link pull-right" %>
      </div>
    <% end %>

  </div>
</div>
