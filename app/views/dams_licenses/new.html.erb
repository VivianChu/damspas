<h1>Create a new DAMS License</h1>
<%= form_for @dams_license do |f| %>
  <%= label_tag 'dams_license[note]', "Note" %><%= text_field_tag 'dams_license[note]', '', class: "input-block-level" %>
  <%= label_tag 'dams_license[uri]', "URI" %><%= url_field_tag 'dams_license[uri]', '', class: "input-block-level" %>
  <%= f.fields_for :permission_node do |pn| %>
    <%= pn.label :type, "Permission Type" %>
    <%= pn.text_field :type , :value => "", class: "input-block-level"%>    
    <%= pn.label :beginDate, "Permission Begin Date" %>
    <%= pn.text_field :beginDate, :value => "", class: "input-block-level"%>
    <%= pn.label :endDate, "Permission End Date" %>
    <%= pn.text_field :endDate, :value => "", class: "input-block-level"%>    
  <% end %>
  <%= f.fields_for :restriction_node do |rn| %>
    <%= rn.label :type, "Restriction Type" %>
    <%= rn.text_field :type , :value => "", class: "input-block-level"%>    
    <%= rn.label :beginDate, "Restriction Begin Date" %>
    <%= rn.text_field :beginDate, :value => "", class: "input-block-level"%>
    <%= rn.label :endDate, "Restriction End Date" %>
    <%= rn.text_field :endDate, :value => "", class: "input-block-level"%>    
  <% end %>   
  <br>
  <%=f.submit "Save", class: "btn btn-primary" %>
<%end%>
